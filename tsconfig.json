{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["types", "node_modules/@types"],
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "inlineSources": true
  }
}
